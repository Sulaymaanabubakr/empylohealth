rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // specific user doc
    match /users/{userId} {
      // Allow anyone authenticated to read basic profile info (needed for Member lists)
      allow read: if isAuthenticated();
      // Users can write their own profile
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Circles
    match /circles/{circleId} {
      // Authenticated users can read circles
      allow read: if isAuthenticated();
      // Only backend (Admin SDK) creates/updates via functions
      allow write: if false; 

      // Subcollections
      match /members/{memberId} {
         // Anyone can read members (needed for listing members in UI)
         allow read: if isAuthenticated();
         allow write: if false;
      }
      
      match /requests/{userId} {
         // User can see their own request
         // Admins/Mods can see all requests
         allow read: if isAuthenticated() && (
             request.auth.uid == userId || 
             get(/databases/$(database)/documents/circles/$(circleId)/members/$(request.auth.uid)).data.role in ['admin', 'creator', 'moderator']
         );
         allow write: if false;
      }

      match /reports/{reportId} {
         // Only Admins/Mods can see reports
         allow read: if isAuthenticated() && 
             get(/databases/$(database)/documents/circles/$(circleId)/members/$(request.auth.uid)).data.role in ['admin', 'creator', 'moderator'];
         allow write: if false;
      }

      match /scheduledHuddles/{eventId} {
         // All authenticated users can read scheduled huddles
         allow read: if isAuthenticated();
         // Only admins/backend write
         allow write: if false;
      }

      match /messages/{messageId} {
         // All authenticated users can read circle messages (needed for analysis)
         allow read: if isAuthenticated();
         allow write: if false;
      }
    }

    // Chats
    match /chats/{chatId} {
      // Participants can read
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      // Only backend creates
      allow write: if false;

      match /messages/{messageId} {
        // Participants of parent chat can read
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        // Only backend sends messages
        allow write: if false;
      }
    }

    // Resources (Articles/Videos)
    match /resources/{resourceId} {
      // Everyone can read content
      allow read: if isAuthenticated();
      // Only admin/backend writes
      allow write: if false;
    }

    // Challenges
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Affirmations
    match /affirmations/{affirmationId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Contact Messages
    match /contactMessages/{messageId} {
      allow read: if isAuthenticated() && request.auth.token.admin == true;
      allow write: if false;
    }

    // Subscription Plans
    match /subscriptionPlans/{planId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Huddles
    match /huddles/{huddleId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    // Learning Sessions
    match /learningSessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    // Campaigns
    match /campaigns/{campaignId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    // Subscription plans
    match /subscriptionPlans/{planId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Assessments (User Submissions)
    match /assessments/{assessmentId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
    }

    // Assessment Questions (Admin Managed)
    match /assessment_questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
  }
}
