rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // specific user doc
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Circles
    match /circles/{circleId} {
      // Authenticated users can read circles
      allow read: if isAuthenticated();
      // Only backend (Admin SDK) creates/updates via functions
      allow write: if false; 
    }

    // Chats
    match /chats/{chatId} {
      // Participants can read
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      // Only backend creates
      allow write: if false;

      match /messages/{messageId} {
        // Participants of parent chat can read
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
        // Only backend sends messages
        allow write: if false;
      }
    }

    // Resources (Articles/Videos)
    match /resources/{resourceId} {
      // Everyone can read content
      allow read: if true;
      // Only admin/backend writes
      allow write: if false;
    }

    // Huddles
    match /huddles/{huddleId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Assessments
    match /assessments/{assessmentId} {
      // Users can read/write their own assessments
      allow read, create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
