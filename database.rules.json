{
  "rules": {
    ".read": false,
    ".write": false,

    "status": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "state": {
          ".validate": "newData.isString() && (newData.val() === 'online' || newData.val() === 'offline')"
        },
        "lastChanged": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": false
        }
      }
    },

    "typing": {
      "$chatId": {
        ".read": "auth != null",
        "$uid": {
          ".write": "auth != null && auth.uid === $uid",
          "state": {
            ".validate": "newData.val() === 'typing'"
          },
          "updatedAt": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "chatPresence": {
      "$chatId": {
        ".read": "auth != null",
        "$uid": {
          ".write": "auth != null && auth.uid === $uid",
          "state": {
            ".validate": "newData.isString() && newData.val().length <= 32"
          },
          "lastSeenAt": {
            ".validate": "newData.isNumber()"
          },
          "updatedAt": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "live": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "state": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 32)"
        },
        "chatId": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 128)"
        },
        "hostUid": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 128)"
        },
        "participants": {
          "$uid": {
            ".validate": "newData.isBoolean()"
          }
        },
        "updatedAt": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": true
        }
      }
    }
  }
}
